  "author": {
    "name": "Doru Moraru",
    "email": "hello@doru.uk",
    "url": "htpps://doru.uk"
  },
  "build": {
    "appId": "uk.doru.electron-device-temperature"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "bootstrap": "^4.6.0",
    "cross-env": "^7.0.3",
    "electron-is-dev": "^1.2.0",
    "osx-temperature-sensor": "^1.0.7",
    "react": "^17.0.1",
    "react-bootstrap": "^1.5.0",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.2",
    "react-thermometer-ecotropy": "^1.0.3",
    "systeminformation": "^5.3.3",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "dev-setup": "rm -rf node_modules package-lock.json yarn.lock && npm i && ./node_modules/.bin/electron-rebuild",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "release": "npm run react-build && electron-builder --publish=never",
    "build": "npm run react-build && npm run electron-build",
    "electron-build": "electron-builder",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^11.2.3",
    "electron-builder": "^22.9.1",
    "electron-rebuild": "^2.3.5",
    "wait-on": "^5.2.1"
  }
}
